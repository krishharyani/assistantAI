generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  oauthTokens    OAuthToken[]
  processedEmails ProcessedEmail[]
  settings       UserSettings?
  auditLogs      AuditLog[]
}

model OAuthToken {
  id           String   @id @default(cuid())
  userId       String
  provider     String   // "google" | "microsoft"
  accessToken  String
  refreshToken String?
  expiresAt    DateTime
  scopes       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
}

model ProcessedEmail {
  id             String   @id @default(cuid())
  userId         String
  externalId     String   // Gmail message ID
  threadId       String?
  subject        String
  fromEmail      String
  category       String   // AI classification result
  confidence     Float
  labelsApplied  String[] // Gmail labels that were applied
  bookingCreated Boolean  @default(false)
  processedAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, externalId])
}

model CalendarLink {
  id              String   @id @default(cuid())
  processedEmailId String
  calendarEventId String   // Google Calendar event ID
  provider        String   // "google" | "microsoft"
  createdAt       DateTime @default(now())
}

model UserSettings {
  id                 String  @id @default(cuid())
  userId             String  @unique
  pollingIntervalMin Int     @default(5)
  autoLabel          Boolean @default(true)
  autoBooking        Boolean @default(false)
  notifyOnBooking    Boolean @default(true)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String   // "email_classified", "label_applied", "event_created", etc.
  details   Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
